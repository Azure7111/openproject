<fieldset class="box with-legend-control" id="project_modules">
  <legend><%= l(:label_module_plural) %></legend>
  <check-uncheck>
    <% Redmine::AccessControl.available_project_modules.each_with_index do |m, ix| %>
      <label class="floating">
      <!-- TODO: replace row init with API calls -->
      <checkable
            observe-project-modules
            name="project[enabled_module_names][]"
            checkbox-id="<%= "project_enabled_module_names_#{m}" %>"
            checkbox-title="<%= l_or_humanize(m, :prefix => "project_module_") %>"
            checkbox-value="<%= "'#{m.to_s}'" %>"
            model="<%= "row_#{ix}" %>"
            checked="<%= "#{project.module_enabled?(m) ? true : false}" %>">
        </checkable>
        <%= l_or_humanize(m, :prefix => "project_module_") %>
      </label>
    <% end %>
  </check-uncheck>
  <%= hidden_field_tag 'project[enabled_module_names][]', '' %>
</fieldset>
